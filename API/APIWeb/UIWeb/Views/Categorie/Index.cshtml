@model IEnumerable<UIWeb.Models.DTO.CategorieDto>
@{
    ViewBag.Title = "Quản lý loại hàng";
}
<form id="formSearch" action="" method="get" data-container="#searchResult">
    <div class="col-sm-12 input-group">
        <input name="filterQuery" type="text" class="form-control" value=""
               placeholder="Nhập tên mặt hàng cần tìm">
        <div class="input-group-btn">
            <button class="btn btn-info" type="submit">
                <i class="glyphicon glyphicon-search"></i>
            </button>

            <a href="Categorie/Create" class="btn btn-primary" style="margin-left:5px">
                <i class="fa fa-plus"></i> Bổ Sung
            </a>
        </div>
    </div>
</form>
<p style="margin:10px 0 10px 0">

</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th>Tên loại hàng</th>
                <th>Mô tả</th>           
                <th style="width:80px"></th>
            </tr>
        </thead>
        <tbody>
           
            @foreach (var categorie in Model)
            {
                <tr>
                   
                    <td>@categorie.CategoryName</td>
                    <td>@categorie.Description</td>
                 
                    <td class="text-right">
                        <a href="Categorie/Edit/@categorie.Id" class="btn btn-xs btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="Categorie/Delete/@categorie.Id" class="btn btn-xs btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>
<div class="text-center">
    <ul class="pagination">
        <li><a href="Categorie?pageNumber=1" onclick="">1</a></li>
        <li><a href="Categorie?pageNumber=2" onclick="">2</a></li>


    </ul>
</div>