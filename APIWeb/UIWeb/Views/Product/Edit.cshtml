@model UIWeb.Models.DTO.ProductCategoryViewModel
<div class="box box-primary">

    <div class="box-header with-border ">
        <h3 class="box-title">Thông tin mặt hàng</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="box-body">
        <form class="form-horizontal" method="Post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <input type="hidden" class="form-control" placeholder="Nhập tên mặt hàng" autofocus  asp-for="@Model.Products.Id">
                    <input type="text" class="form-control" placeholder="Nhập tên mặt hàng" autofocus asp-for="@Model.Products.ProductName">
                    @Html.ValidationMessage("ProductName", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" placeholder="Nhập mô tả" rows="3" autofocus asp-for="@Model.Products.ProductDescription"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Loại hàng:</label>
                <div class="col-sm-10">
                    <select class="form-control" autofocus asp-for="@Model.Products.CategoryID">
                        @foreach(var item in Model.Categories)
                        {
                            <option value="@item.Id">@item.CategoryName</option>
                        }
                    </select>

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhà cung cấp:</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="@Model.Products.SupplierID">
                        <option value="0">--Nhà cung cấp--</option>
                        <option value="F7248FC3-2585-4EFB-8D1D-1C555F4087F6">Công ty Xuất nhập khẩu Thành Hưng</option>
                        <option value="14CEBA71-4B51-4777-9B17-46602CF66153">Công ty TNHH Sao Mai Việt</option>
                        <option value="6884F7D7-AD1F-4101-8DF3-7A6FA7387D81">Công ty Cổ phần đầu tư và phát triển GAMZ</option>
                    </select>

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="@Model.Products.Unit" placeholder="Nhập đơn vị tính">

                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" asp-for="@Model.Products.Price" placeholder="Nhập giá hàng">
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>@Html.CheckBoxFor(m => m.Products.IsSelling, new { @value = "true", @checked = (Model.Products.IsSelling) ? "true" : "false" })</label>
                        Hiện đang được bán
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh Minh Họa:</label>
                <div class="col-sm-10">
                    <input type="file" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" asp-for="@Model.Products.Photo" />
                    <img id="Photo" src="@Model.Products.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Product">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>

</div>

