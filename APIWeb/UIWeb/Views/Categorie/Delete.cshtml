@model UIWeb.Models.DTO.CategorieDto
@{
    ViewBag.Title = "Xóa loại hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.CategoryName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Description</p>
                </div>
            </div>

            
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">

                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-floppy-o"></i>
                        Xóa dữ liệu
                    </button>
                    <a href="~/Categorie" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>
</div>

