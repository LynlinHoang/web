@model UIWeb.Models.DTO.CategorieDto
<div class="box box-primary">

    <div class="box-header with-border ">
        <h3 class="box-title">Thông tin loại hàng</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data">
            <input type="hidden" class="form-control" placeholder="Nhập tên mặt hàng" autofocus asp-for="Id">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên loại hàng:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Nhập tên mặt hàng" autofocus asp-for="CategoryName">

                </div>

            </div>


            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" placeholder="Nhập mô tả" rows="3" asp-for="Description"></textarea>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Categorie">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>

    </div>

</div>


