<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <div class="form-group">
                <input type="hidden" name="SupplierID" value="@Model.SupplierID">
                <label>Tên nhà cung cấp:</label>
                @* <input type="text" class="form-control" name="SupplierName" value="@Model.SupplierName"> *@
                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autofocus", @placeholder="Nhập tên nhà cung cấp" })
                @Html.ValidationMessage(nameof(Model.SupplierName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                @* <input type="text" class="form-control" name="ContactName" value="@Model.ContactName"> *@
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @autofocus = "autofocus"  ,@placeholder = "Nhập tên giao dịch" })
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                @* <input type="text" class="form-control" name="Phone" value="@Model.Phone"> *@
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Nhập số điện thoại" })
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Email:</label>
                @* <input type="email" class="form-control" name="Email" value="@Model.Email"> *@
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Nhập Email" })
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                @*< input type="text" class="form-control" name="Address" value="@Model.Address"> *@
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Nhập địa chỉ" })
                @Html.ValidationMessage(nameof(Model.Address), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Tỉnh thành:</label>
                                @*  <select class="form-control" name="Province">
                                <option value="">--Chọn tỉnh thành--</option>
                                    @foreach(var item in SV20T1020056.BusinessLayers.CommonDataService.ListOfProvinces())
                                    {
                                            if (item.ProvinceName==Model.Province)
                                            {
                                                <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                                            }
                                            else{

                                                 <option value="@item.ProvinceName" >@item.ProvinceName</option>
                                            }
                                    }
                                </select> *@
                @Html.DropDownListFor(m => m.Provice, SelectlistHelper.Provinces(), new { @class = "form-control select2" })
                @Html.ValidationMessage(nameof(Model.Provice), new { @style = "color:#f00" })
            </div>
        
            <div class="from-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy"> </i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>


