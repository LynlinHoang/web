@model SV20T1020056.DomainModels.Shipper
@{
   
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            <div class="form-group">
                <input type="hidden" name="ShipperID" value="@Model.ShipperID">
                <label>Tên người giao hàng:</label>
                @* <input type="text" class="form-control" name="ShipperName" value="@Model.ShipperName" placeholder="Nhập tên người giao hàng"> *@
                @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Nhập tên người giao hàng" })
                @Html.ValidationMessage(nameof(Model.ShipperName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                @* <input type="text" class="form-control" name="Phone" value="@Model.Phone" placeholder="Nhập tên số điện thoại"> *@
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Nhập số điện thoại" })
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
            </div>
            <div class="from-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy"> </i>
                    Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>



