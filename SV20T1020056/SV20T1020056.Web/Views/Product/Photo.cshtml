@model SV20T1020056.DomainModels.ProductPhoto
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Product/SavePhoto">
            <input type="hidden" class="form-control" name="PhotoID" value="@Model.PhotoID" />
            <input type="hidden" class="form-control" name="ProductID" value="@Model.ProductID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Chọn file ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Description" placeholder="Nhập mô tả" value="@Model.Description" />
                    @Html.ValidationMessage(nameof(Model.Description), new { @style = "color:#f00" })
                </div>
                
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị ảnh:</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="DisplayOrder" placeholder="Nhập thứ tự hiển thị" value="@Model.DisplayOrder" />
                    @Html.ValidationMessage(nameof(Model.DisplayOrder), new { @style = "color:#f00" })
                </div>
                
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <label>

                        <label>@Html.CheckBoxFor(m => m.IsHidden, new { @value = "true", @checked = (Model.IsHidden) ? "true" : "false" })</label>
                        Hiển thị ảnh
                    </label>
                </div>
            </div>      
            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Product/Edit/@Model.ProductID" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>


