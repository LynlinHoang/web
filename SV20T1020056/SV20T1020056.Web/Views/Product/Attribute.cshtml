@model SV20T1020056.DomainModels.ProductAttribute
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Product/SaveAttribute" method="post">
            <div class="form-group">
                <input type="hidden" class="form-control" name="ProductID" value="@Model.ProductID">
                <input type="hidden" class="form-control" name="AttributeID" value="@Model.AttributeID">
                <label>Tên tên thuộc tính:</label>
                <input type="text" class="form-control" name="AttributeName" placeholder="Nhập tên thuộc tính" value="@Model.AttributeName">
                @Html.ValidationMessage(nameof(Model.AttributeName), new { @style = "color:#f00" })
            </div>
           
            <div class="form-group">
                <label>Gía trị thuộc tính:</label>
                <input type="text" class="form-control" name="AttributeValue" placeholder="Nhập giá trị" value="@Model.AttributeValue">
                @Html.ValidationMessage(nameof(Model.AttributeValue), new { @style = "color:#f00" })
            </div>
           
            
            <div class="form-group">
                <label>Thứ tự hiển thị:</label>
                <input type="text" class="form-control" name="DisplayOrder" placeholder="Nhập thứ tự hiển thị" value="@Model.DisplayOrder">
              
            </div>
           
            <div class="from-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy"> </i>
                    Lưu dữ liệu
                </button>
                <a href="~/Product/Edit/@Model.ProductID" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

