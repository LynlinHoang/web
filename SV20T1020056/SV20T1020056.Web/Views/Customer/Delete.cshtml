@model SV20T1020056.DomainModels.Customer
@*

*@
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Delete/@Model.CustomerID" method="post">
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <p class="form-control-static" name="CustomerName">@Model.CustomerName</p>
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                <p class="form-control-static" name="ContactName">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label>Số điện thoại:</label>
                <p class="form-control-static" name="Phone">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static" name="Email">@Model.Email</p>
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static" name="Address">@Model.Address</p>
            </div>
            <div class="form-group">
                <label>Tỉnh thành:</label> 
                <p class="form-control-static" name="Province">@Model.Province</p>
            </div>
            <div class="form-group">
                <label>Trạng thái:</label>
                <p class="form-control-static">
                    @(Model.IsLocked ? "Tài khoản bị khóa" : "Tài khoản đang hoạt động")
                </p>

            </div>
            <div class="from-group text-right">
                @if (ViewBag.AllowDelete)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-floppy"> </i>
                        Xóa dữ liệu
                    </button>
                }
                              
                <a class="btn btn-default" href="~/Customer">Quay lại</a>
            </div>
        </form>
    </div>
</div>



